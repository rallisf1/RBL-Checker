{
	"name": "dashboard",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite dev",
		"build": "bunx --bun vite build",
		"preview": "bunx --bun vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"typegen": "bunx pocketbase-typegen --env --out ./src/lib/pocketbase-types.ts",
		"get-countries": "curl -s https://restcountries.com/v3.1/all?fields=name,cca2,flag,tld | jq -r '.[] | {name: .name.common, code: .cca2, flag: .flag, tlds: .tld}' > ./src/lib/countries.json"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@iconify-json/circle-flags": "^1.2.10",
		"@iconify-json/tabler": "^1.2.23",
		"@iconify/svelte": "^5.1.0",
		"@iconify/tailwind4": "^1.1.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/datatables.net": "^1.12.3",
		"@types/jquery": "^3.5.33",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.10",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.0",
		"flyonui": "^2.4.1",
		"globals": "^16.5.0",
		"playwright": "^1.56.1",
		"pocketbase-typegen": "^1.3.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.8",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vitest": "^4.0.10",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@types/bun": "^1.3.5",
		"apexcharts": "^5.3.6",
		"cheerio": "^1.1.2",
		"datatables.net": "^2.3.6",
		"dev": "^0.1.3",
		"install": "^0.13.0",
		"jquery": "^3.7.1",
		"loadash": "^1.0.0",
		"notyf": "^3.10.0",
		"pocketbase": "^0.26.6",
		"theme-change": "^2.5.0"
	}
}
